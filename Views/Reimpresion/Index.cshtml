<div class="text-center">

    <div class="row top-row-spacer">
        <div class="col-md-10">
            <h4 class="page-title">Reimpresión de Etiquetas</h4>
        </div>
        <div class="col-md-2">
            <button id="btnReimprimir" class="btn btn-block secondary-background-color" style="color: white">
                <i class="fas fa-print"></i>
                Imprimir Etiquetas
            </button>
        </div>
    </div>

    <div class="card card-margin">
        <!-- Orden -->
        <div class="row card-row-spacer">
            <div class="col-md-6">
                <label style="font-weight: normal; float: left">Orden de compra</label>
                <input id="ordenDeCompraInput" class="form-control" placeholder="Ingresa el número de orden" />
            </div>
        </div>

        <!-- Serial(es) -->
        <div class="row card-row-spacer mb-4">
            <div class="col-md-12">
                <label style="font-weight: normal; float: left">Serial(es)</label>
                <input id="serialesInput" class="form-control" placeholder="Ingresa el serial" />
            </div>
        </div>
    </div>
</div>

<script type="module">
    import { openPrintWindow } from "/js/labelPrinter.js";

    // simple HTML escape to avoid issues on product names
    const esc = (s) => String(s || "")
        .replaceAll("&", "&amp;")
        .replaceAll("<", "&lt;")
        .replaceAll(">", "&gt;")
        .replaceAll('"', "&quot;")
        .replaceAll("'", "&#39;");

    $(document).ready(function () {
        $("#btnReimprimir").click(function () {
            const orden = ($("#ordenDeCompraInput").val() || "").trim();
            const serialesRaw = ($("#serialesInput").val() || "").trim();

            if (!orden || !serialesRaw) {
                alert("Por favor ingrese la orden y al menos un serial.");
                return;
            }

            // Normalizar lista de seriales
            let serialesArr = serialesRaw
                .split(",")
                .map(s => (s || "").trim().toUpperCase())
                .filter(s => s !== "");

            if (serialesArr.length === 0) {
                alert("No se detectaron seriales válidos.");
                return;
            }

            // Quitar duplicados
            serialesArr = [...new Set(serialesArr)];

            const payload = { orden, seriales: serialesArr };

            $.ajax({
                url: "/Reimpresion/ValidarSeriales",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(payload),
                success: function (response) {
                    // Esperado: { success: bool, seriales: [string], productos: { [serial]: nombreProducto } }
                    if (!response || !response.success || !response.seriales || response.seriales.length === 0) {
                        alert("No se encontraron seriales válidos para esa orden.");
                        return;
                    }

                    const productos = response.productos || {};

                    // Construir etiquetas con producto (si viene)
                    const labels = response.seriales.map(serial => {
                        const nombre = productos[serial] || "";
                        return `
                                <div class="label">
                                    <h4>Orden: ${esc(orden)}</h4>
                                    ${nombre ? `<h4>Producto: ${esc(nombre)}</h4>` : ""}
                                    <h4>Serial: ${esc(serial)}</h4>
                                    <svg class="barcode" data-barcode-value="${esc(serial)}"></svg>
                                </div>
                            `;
                    });

                    openPrintWindow(labels.join(""), orden);
                },
                error: function () {
                    alert("Error al validar los seriales.");
                }
            });
        });
    });
</script>
