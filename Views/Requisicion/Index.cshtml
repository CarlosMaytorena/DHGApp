@model AgricolaDH_GApp.ViewModels.RequisicionesVM
@{
    // Semanas actuales para aceptadas / rechazadas (default 1 semana)
    var aw = (ViewBag.AcceptedWeeks as int?) ?? 1;
    var rw = (ViewBag.RejectedWeeks as int?) ?? 1;
}

<style>
    .tools-inline {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-left: auto;
    }
</style>

<div class="text-center">

    <div class="row top-row-spacer">
        <div class="col-md-6">
            <h4 class="page-title">Requisición</h4>
        </div>

        <div class="col-md-4">
        </div>

        <div class="col-md-2">
            <button id="crearRequisicion" class="btn btn-block secondary-background-color" style="color: white">
                <i class="nav-icon fas fa-arrow-plus"></i>
                Crear Requisición
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-12">

            <!-- Requisiciones Enviadas -->
            <div class="card card-margin">
                <div class="card-header">
                    <h3 class="card-title">Requisiciones Enviadas</h3>

                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" id="requisiciones_tableSearch" class="form-control float-right" placeholder="Search">
                            <div class="input-group-append">
                                <button type="button" id="requisicones_searchButton" class="btn btn-default">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body table-responsive p-0" style="height: 300px;">
                    <table id="requisicionesTable" class="table table-head-fixed text-nowrap">
                        <thead>
                            <tr>
                                <th style="width:30px">Acción</th>
                                <th>ID</th>
                                <th>Fecha</th>
                                <th>Solicitante</th>
                                <th>Status</th>
                                <th>Área</th>
                                <th>Cultivo</th>
                                <th>Rancho</th>
                                <th>Etapa</th>
                                <th>Temporada</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.requisicionList.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <a href="#" id="@Model.requisicionList[i].IdOrdenDeCompra" class="editarRequisicion" style="color: #2E2E2E">
                                            <i class="nav-icon fas fa-pen"></i>
                                        </a>
                                    </td>
                                    <td>@Model.requisicionList[i].IdOrdenDeCompra</td>
                                    <td>@Model.requisicionList[i].FechaRequisicion.ToShortDateString()</td>
                                    <td>@Model.requisicionList[i].Solicitante</td>
                                    <td>@Model.requisicionList[i].Proveedor</td>
                                    <td>@Model.requisicionList[i].Area</td>
                                    <td>@Model.requisicionList[i].Cultivo</td>
                                    <td>@Model.requisicionList[i].Rancho</td>
                                    <td>@Model.requisicionList[i].Etapa</td>
                                    <td>@Model.requisicionList[i].Temporada</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Requisiciones Aceptadas -->
            <div class="card card-margin">
                <div class="card-header d-flex align-items-center">
                    <h3 class="card-title mb-0">Requisiciones Aceptadas</h3>

                    <div class="tools-inline">
                        <!-- Dropdown de semanas para aceptadas -->
                        <select id="acceptedWeeksSelect" class="form-control form-control-sm" style="width: 160px;">
                            @if (aw == 1)
                            {
                                <option value="1" selected>Últimos 7 días</option>
                            }
                            else
                            {
                                <option value="1">Últimos 7 días</option>
                            }
                            @if (aw == 2)
                            {
                                <option value="2" selected>Últimas 2 semanas</option>
                            }
                            else
                            {
                                <option value="2">Últimas 2 semanas</option>
                            }
                            @if (aw == 0)
                            {
                                <option value="0" selected>Sin filtro</option>
                            }
                            else
                            {
                                <option value="0">Sin filtro</option>
                            }
                        </select>

                        <!-- Search local por ID en aceptadas -->
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" id="requisicionesAceptadas_tableSearch" class="form-control" placeholder="Search">
                            <div class="input-group-append">
                                <button type="button" id="requisicionesAceptadas_searchButton" class="btn btn-default">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body table-responsive p-0" style="height: 300px;">
                    <table id="requisicionesAceptadasTable" class="table table-head-fixed text-nowrap">
                        <thead>
                            <tr>
                                <th style="width:30px">Acción</th>
                                <th>ID</th>
                                <th>Fecha</th>
                                <th>Solicitante</th>
                                <th>Status</th>
                                <th>Área</th>
                                <th>Cultivo</th>
                                <th>Rancho</th>
                                <th>Etapa</th>
                                <th>Temporada</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.requisicionAceptadaList.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <a href="#" id="@Model.requisicionAceptadaList[i].IdOrdenDeCompra" class="editarRequisicion" style="color: #2E2E2E">
                                            <i class="nav-icon fas fa-eye"></i>
                                        </a>
                                    </td>
                                    <td>@Model.requisicionAceptadaList[i].IdOrdenDeCompra</td>
                                    <td>@Model.requisicionAceptadaList[i].FechaRequisicion.ToShortDateString()</td>
                                    <td>@Model.requisicionAceptadaList[i].Solicitante</td>
                                    <td>@Model.requisicionAceptadaList[i].Proveedor</td>
                                    <td>@Model.requisicionAceptadaList[i].Area</td>
                                    <td>@Model.requisicionAceptadaList[i].Cultivo</td>
                                    <td>@Model.requisicionAceptadaList[i].Rancho</td>
                                    <td>@Model.requisicionAceptadaList[i].Etapa</td>
                                    <td>@Model.requisicionAceptadaList[i].Temporada</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Requisiciones Rechazadas -->
            <div class="card card-margin">
                <div class="card-header d-flex align-items-center">
                    <h3 class="card-title mb-0">Requisiciones Rechazadas</h3>

                    <div class="tools-inline">
                        <!-- Dropdown de semanas para rechazadas -->
                        <select id="rejectedWeeksSelect" class="form-control form-control-sm" style="width: 160px;">
                            @if (rw == 1)
                            {
                                <option value="1" selected>Últimos 7 días</option>
                            }
                            else
                            {
                                <option value="1">Últimos 7 días</option>
                            }
                            @if (rw == 2)
                            {
                                <option value="2" selected>Últimas 2 semanas</option>
                            }
                            else
                            {
                                <option value="2">Últimas 2 semanas</option>
                            }
                            @if (rw == 0)
                            {
                                <option value="0" selected>Sin filtro</option>
                            }
                            else
                            {
                                <option value="0">Sin filtro</option>
                            }
                        </select>

                        <!-- Search local por ID en rechazadas -->
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" id="requisicionesRechazadas_tableSearch" class="form-control" placeholder="Search">
                            <div class="input-group-append">
                                <button type="button" id="requisicionesRechazadas_searchButton" class="btn btn-default">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body table-responsive p-0" style="height: 300px;">
                    <table id="requisicionesRechazadasTable" class="table table-head-fixed text-nowrap">
                        <thead>
                            <tr>
                                <th style="width:30px">Acción</th>
                                <th>ID</th>
                                <th>Fecha</th>
                                <th>Solicitante</th>
                                <th>Status</th>
                                <th>Área</th>
                                <th>Cultivo</th>
                                <th>Rancho</th>
                                <th>Etapa</th>
                                <th>Temporada</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.requisicionRechazadaList.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <a href="#" id="@Model.requisicionRechazadaList[i].IdOrdenDeCompra" class="editarRequisicion" style="color: #2E2E2E">
                                            <i class="nav-icon fas fa-eye"></i>
                                        </a>
                                    </td>
                                    <td>@Model.requisicionRechazadaList[i].IdOrdenDeCompra</td>
                                    <td>@Model.requisicionRechazadaList[i].FechaRequisicion.ToShortDateString()</td>
                                    <td>@Model.requisicionRechazadaList[i].Solicitante</td>
                                    <td>@Model.requisicionRechazadaList[i].Proveedor</td>
                                    <td>@Model.requisicionRechazadaList[i].Area</td>
                                    <td>@Model.requisicionRechazadaList[i].Cultivo</td>
                                    <td>@Model.requisicionRechazadaList[i].Rancho</td>
                                    <td>@Model.requisicionRechazadaList[i].Etapa</td>
                                    <td>@Model.requisicionRechazadaList[i].Temporada</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        //  Navegación / abrir formularios 
        $("#crearRequisicion").click(function () {
            $.ajax({
                type: "POST",
                url: '@Url.Action("CrearRequisicion", "Requisicion")',
                contentType: "application/json; charset=utf-8",
                data: {},
                success: function (data) {
                    $("#HtmlBody").html(data);
                }
            });
        });

        $(".editarRequisicion").click(function () {
            var IdOrdenDeCompra = $(this).attr("id");
            $.ajax({
                type: "POST",
                url: '@Url.Action("EditarRequisicion", "Requisicion")',
                data: { IdOrdenDeCompra: IdOrdenDeCompra },
                success: function (data) {
                    $("#HtmlBody").html(data);
                }
            });
        });

        // Búsqueda local 
        function searchTableById($table, query) {
            query = (query || "").toLowerCase();
            $table.find("tbody tr").each(function () {
                let idText = ($(this).find("td:eq(1)").text() || "").toLowerCase();
                $(this).toggle(idText.includes(query));
            });
        }

        // Enviadas
        $("#requisicones_searchButton").click(function () {
            const q = $("#requisiciones_tableSearch").val();
            searchTableById($("#requisicionesTable"), q);
        });
        $("#requisiciones_tableSearch").keypress(function (e) {
            if (e.which === 13) {
                const q = $(this).val();
                searchTableById($("#requisicionesTable"), q);
            }
        });

        // Aceptadas
        $("#requisicionesAceptadas_searchButton").click(function () {
            const q = $("#requisicionesAceptadas_tableSearch").val();
            searchTableById($("#requisicionesAceptadasTable"), q);
        });
        $("#requisicionesAceptadas_tableSearch").keypress(function (e) {
            if (e.which === 13) {
                const q = $(this).val();
                searchTableById($("#requisicionesAceptadasTable"), q);
            }
        });

        // Rechazadas
        $("#requisicionesRechazadas_searchButton").click(function () {
            const q = $("#requisicionesRechazadas_tableSearch").val();
            searchTableById($("#requisicionesRechazadasTable"), q);
        });
        $("#requisicionesRechazadas_tableSearch").keypress(function (e) {
            if (e.which === 13) {
                const q = $(this).val();
                searchTableById($("#requisicionesRechazadasTable"), q);
            }
        });

        $("#acceptedWeeksSelect").on("change", function () {
            var newAccepted = $(this).val() || 1;
            var currRejected = $("#rejectedWeeksSelect").val() || @rw;
            $.get('@Url.Action("Index", "Requisicion")', { acceptedWeeks: newAccepted, rejectedWeeks: currRejected }, function (html) {
                $("#HtmlBody").html(html);
            });
        });

        $("#rejectedWeeksSelect").on("change", function () {
            var newRejected = $(this).val() || 1;
            var currAccepted = $("#acceptedWeeksSelect").val() || @aw;
            $.get('@Url.Action("Index", "Requisicion")', { acceptedWeeks: currAccepted, rejectedWeeks: newRejected }, function (html) {
                $("#HtmlBody").html(html);
            });
        });
    });
</script>
