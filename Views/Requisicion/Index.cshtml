                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>

</div>

<script>
    $(document).ready(function () {

        $("#crearRequisicion").click(function () {
            $.ajax({
                type: "POST",
                url: '@Url.Action("CrearRequisicion", "Requisicion")',
                contentType: "application/json; charset=utf-8",
                data: {},
                success: function (data) {

                    $("#HtmlBody").html(data);
                }
            });
        });

        $(".editarRequisicion").click(function () {

            var IdRequisicion = $(this).attr("id");

            $.ajax({
                type: "POST",
                url: '@Url.Action("EditarRequisicion", "Requisicion")',
                data: { IdRequisicion: IdRequisicion },
                success: function (data) {

                    $("#HtmlBody").html(data);
                }
            });
        });

    });
</script>

