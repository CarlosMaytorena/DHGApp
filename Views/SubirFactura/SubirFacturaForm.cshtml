@model AgricolaDH_GApp.ViewModels.SubirFacturaVM

<form id="dataform">
    @{
        bool edit = false;
        string title = "Crear Requisición";

        if (Model.ordenDeCompra.IdOrdenDeCompra > 0)
        {
            edit = true;
            title = "Editar Requisición";
        }
    }
    <div class="text-center">

        <div class="row top-row-spacer">
            <div class="col-md-6">
                <h4 class="page-title">@title</h4>
            </div>

@*             @if(!edit)
            {
                <div class="col-md-4">
                </div>
                <div class="col-md-2">
                    <button type="button" id="enviarRequisicion" class="btn btn-block secondary-background-color" style="color: white">
                        <i class="nav-icon fas fa-arrow-right"></i>
                        Enviar
                    </button>
                </div>
            }
            else
            {
                <div class="col-md-2">
                </div>
                <div class="col-md-2">
                    <button type="button" id="aceptarRequisicion" class="btn btn-block secondary-background-color" style="color: white">
                        <i class="nav-icon fas fa-check"></i>
                        Aceptar
                    </button>
                </div>
                <div class="col-md-2">
                    <button type="button" id="negarRequisicion" class="btn btn-block btn-danger" style="color: white">
                        <i class="nav-icon fas fa-trash"></i>
                        Negar
                    </button>
                </div>
            } *@

        </div>

        <div class="card card-margin">
            @Html.HiddenFor(m => m.ordenDeCompra.IdOrdenDeCompra)
            <div class="row card-row-spacer">
                <div class="col-md-4">
                    <label style="font-weight: normal; text-align: left; float: left">Fecha</label>
                    @Html.EditorFor(m => m.ordenDeCompra.Fecha, new { htmlAttributes = new { @class = "form-control input-focus" } })
                </div>
                <div class="col-md-4">
                    <label style="font-weight: normal; text-align: left; float: left">Solicitante</label>
                    @Html.DropDownListFor(m => m.ordenDeCompra.IdSolicitante, new SelectList(Model.solicitanteList, "IdUsuario", "Nombre"), " ", new { @class = "form-control input-focus requisicion" })
                </div>
                <div class="col-md-4">
                    <label style="font-weight: normal; text-align: left; float: left">Proveedor</label>
                    @Html.DropDownListFor(m => m.ordenDeCompra.IdProveedor, new SelectList(Model.proveedorList, "IdProveedor", "Nombre"), " ", new { @class = "form-control input-focus requisicion" })
                </div>
            </div>
            <div class="row card-row-spacer">
                <div class="col-md-4">
                    <label style="font-weight: normal; text-align: left; float: left">Área</label>
                    @Html.DropDownListFor(m => m.ordenDeCompra.IdArea, new SelectList(Model.areaList, "IdArea", "Descripcion"), " ", new { @class = "form-control input-focus requisicion" })
                </div>
                <div class="col-md-4">
                    <label style="font-weight: normal; text-align: left; float: left">Cultivo</label>
                    @Html.DropDownListFor(m => m.ordenDeCompra.IdCultivo, new SelectList(Model.cultivoList, "IdCultivo", "Descripcion"), " ", new { @class = "form-control input-focus requisicion" })
                </div>
                <div class="col-md-4">
                    <label style="font-weight: normal; text-align: left; float: left">Rancho</label>
                    @Html.DropDownListFor(m => m.ordenDeCompra.IdRancho, new SelectList(Model.ranchoList, "IdRancho", "Descripcion"), " ", new { @class = "form-control input-focus requisicion" })
                </div>
            </div>
            <div class="row card-row-spacer">
                <div class="col-md-4">
                    <label style="font-weight: normal; text-align: left; float: left">Etapa</label>
                    @Html.DropDownListFor(m => m.ordenDeCompra.IdEtapa, new SelectList(Model.etapaList, "IdEtapa", "Descripcion"), " ", new { @class = "form-control input-focus requisicion" })
                </div>
                <div class="col-md-4">
                    <label style="font-weight: normal; text-align: left; float: left">Temporada</label>
                    @Html.DropDownListFor(m => m.ordenDeCompra.IdTemporada, new SelectList(Model.temporadaList, "IdTemporada", "Descripcion"), " ", new { @class = "form-control input-focus requisicion" })
                </div>
            </div>
            <div id="productosOrdenarContent">
                @Html.Partial("~/Views/SubirFactura/ProductosOrdenar.cshtml", Model)
            </div>            
        </div>
    </div>
</form>

<script>
    $(document).ready(function () {

        $("#enviarRequisicion").click(function () {

            var dataform = $("#dataform");

            if(Validation())
            {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("InsertRequisicion", "Requisicion")',
                    data: dataform.serialize(),
                    success: function (data) {
                        $("#HtmlBody").html(data.url);
                    }
                });
            }

        });

        $("#aceptarRequisicion").click(function () {

            var dataform = $("#dataform");

            if(Validation())
            {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("AcceptRejectRequisicion", "Requisicion")',
                    data: dataform.serialize() + "&IdOrdenDeCompraStatus=2",
                    success: function (data) {
                        $("#HtmlBody").html(data.url);
                    }
                });
            }

        });

        $("#negarRequisicion").click(function () {

            var dataform = $("#dataform");

            if(Validation())
            {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("AcceptRejectRequisicion", "Requisicion")',
                    data: dataform.serialize() + "&IdOrdenDeCompraStatus=3",
                    success: function (data) {
                        $("#HtmlBody").html(data.url);
                    }
                });
            }

        });

        function Validation() {

            var validation = true

            $('.requisicion').each(function() {

                $("#" + this.id).css("border-color", "");

                if($("#" + this.id).val() == null || $("#" + this.id).val() == "" || $("#" + this.id).val() == "0"){
                    $("#" + this.id).css("border-color", "red");
                    validation = false;
                }
            });

            return validation;

        }



    });
</script>