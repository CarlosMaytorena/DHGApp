@model AgricolaDH_GApp.ViewModels.AlmacenVM
<form id="dataform">

<div class="row top-row-spacer">
    <div class="col-md-4">
        <h4 class="page-title">Entrada a Almacen</h4>
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-2">
        <button type="button" id="aceptar" class="btn btn-block secondary-background-color" style="color: white">
            Aceptar
        </button>
    </div>
    <div class="col-md-2">
        <button type="button" id="cancelar" class="btn btn-block btn-danger" style="color: white">
            <i class="nav-icon fas fa-ban"></i>
            Cancelar
        </button>
    </div>
</div>

<div class="card card-margin">
    <div class="row card-row-spacer">
        <div class="col-md-4">
            @Html.HiddenFor(m => m.almacen.IdProducto)
            <label style="font-weight: normal; text-align: left; float: left">Almacenista</label>
            @Html.DropDownListFor(m => m.almacen.IdAlmacenista, new SelectList(Model.usuariosList, "IdUsuario", "Username"), " ", new { @class = "form-control input-focus", @id="Almacenista"})
        </div>
        <div class="col-md-4">
            <label style="font-weight: normal; text-align: left; float: left">Solicitante</label>
            @Html.DropDownListFor(m => m.almacen.IdSolicitante, new SelectList(Model.usuariosList, "IdUsuario", "Username"), " ", new { @class = "form-control input-focus", @id="Solicitante" })
        </div>
        <div class="col-md-4">
            <label style="font-weight: normal; text-align: left; float: left">Razon</label>
            @Html.EditorFor(m => m.almacen.RazonUso, new { htmlAttributes = new { @class = "form-control input-focus"} })
        </div>
    </div>
    <div class="row card-row-spacer">
    </div>

</div>



<div id="ListaDeProductos">

    @Html.Partial("~/Views/Almacen/ListaProductos.cshtml", Model)
</div>
</form>

<div class="modal fade" id="modal-success">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Confirmacion</h4>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-editar-body">
                <p style="margin-left: 10px">Movimiento generado existosamente.</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button id="aceptar" type="button" class="btn btn-primary">Aceptar</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<div class="modal fade" id="modal-confirmacion">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Confirmacion de Entrada</h4>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-agregar-body">
                <p style="margin-left: 10px">¿Seguro que desea continuar?</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-bs-dismiss="modal">Cancelar</button>
                <button id="procesarMovimiento" type="button" class="btn btn-primary">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#cancelar").click(function () {
            $.ajax({
                type: "GET",
                url: '@Url.Action("Index", "Almacen")',
                contentType: "application/json; charset=utf-8",
                data: {},
                success: function (data) {
                    $("#HtmlBody").html(data);
                }
            });
        });

        $("#aceptar").click(function () {
            if (Validation()) {
                $("#modal-confirmacion").modal("show");
            }
        });

        $("#procesarMovimiento").click(function () {
            $("#modal-confirmacion").modal("hide");
            var dataform = $("#dataform").serialize() + '&' + $("#listaForms").serialize();
            alert(dataform);
            $.ajax({
                type: "POST",
                contentType: "application/x-www-form-urlencoded; charset=UTF-8",
                url: '@Url.Action("AltaAlmacen", "Almacen")',
                data: dataform,
                success: function (data) {
                    if (data.res > 0) {
                        $("#modal-success").modal("show");
                    } 
                    else {
                        $("#modal-warning").modal("show");
                        $("#cancelar").click();
                    }
                },
            });
        });     
        
        function Validation() {
            var validation = true;
            $("#Almacenista").css("border-color", "");
            $("#Solicitante").css("border-color", "");
            $("#RazonUso").css("border-color", "");

            if ($("#Almacenista").val() == null || $("#Almacenista").val() == "") {
                $("#Almacenista").css("border-color", "red");
                validation = false;
            }
            if ( $("#Solicitante").val() == null || $("#Solicitante").val() == "") {
                $("#Solicitante").css("border-color", "red");
                validation = false;
            }
            if ( $("#RazonUso").val() == null || $("#RazonUso").val() == "") {
                $("#RazonUso").css("border-color", "red");
                validation = false;
            }
            return validation;
        };
    });
</script>
