@model AgricolaDH_GApp.ViewModels.AlmacenVM

<form id="dataform">
    <div class="row top-row-spacer">
        <div class="col-md-4">
            <h4 class="page-title">Salida de Almacen</h4>
        </div>
        <div class="col-md-4">
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-block secondary-background-color fieldValidation" style="color: white">
                Aceptar
            </button>
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-block btn-danger almacen" style="color: white">
                <i class="nav-icon fas fa-ban"></i>
                Cancelar
            </button>
        </div>
    </div>

    <div class="card card-margin">
        <div class="row card-row-spacer">
            <div class="col-md-4">
                @Html.HiddenFor(m => m.almacen.IdProducto)
                <label style="font-weight: normal; text-align: left; float: left">Almacenista</label>
                @if (Model.almacen.esAutorizado)
                {
                    var usuariosFiltrados = Model.usuariosList
                    .Where(u => u.IdRol == 1 || u.IdRol == 4 || u.IdRol == 5)
                    .ToList();
                    @Html.DropDownListFor(m => m.almacen.IdAlmacenista, new SelectList(usuariosFiltrados, "IdUsuario", "NombreCompleto"), " ", new { @class = "form-control input-focus validar" })
                }
                else
                {
                    var usuariosFiltrados = Model.usuariosList
                    .Where(u => u.IdRol == 1 || u.IdRol == 4 || u.IdRol == 5)
                    .ToList();
                    @Html.DropDownListFor(m => m.almacen.IdAlmacenista, new SelectList(usuariosFiltrados, "IdUsuario", "NombreCompleto"), " ", new { @class = "form-control input-focus validar", @disabled = "disabled" })
                }
            </div>
            <div class="col-md-4">
                <label style="font-weight: normal; text-align: left; float: left">Solicitante</label>
                @Html.DropDownListFor(m => m.almacen.IdSolicitante, new SelectList(Model.ingenieroList, "IdUsuario", "NombreCompleto"), " ", new { @class = "form-control input-focus validar" })
            </div>
            <div class="col-md-4">
                <label style="font-weight: normal; text-align: left; float: left">Razon</label>
                @Html.EditorFor(m => m.almacen.RazonUso, new { htmlAttributes = new { @class = "form-control input-focus validar RazonValidar" } })
            </div>
        </div>
        <div class="row card-row-spacer">
        </div>

    </div>
</form>
<div id="ListaDeProductos">
    <partial name="~/Views/Almacen/ListaProductos.cshtml"
             model="Model"/>
</div>

<div class="modal fade" id="modal-success">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Confirmacion</h4>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-editar-body">
                <p style="margin-left: 10px">Movimiento generado existosamente.</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-primary almacen">Aceptar</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
 
<div class="modal fade" id="modal-reauth">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Validar Usuario</h4>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-agregar-body" style="margin: 15px">
                <form id="passform">
                    @Html.AntiForgeryToken()
                    <label for="confirmPassword">Contraseña:</label> 
                    <input type="password" class="form-control" id="confirmPassword" name="Password" /> 
                </form>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary reauth-user">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-warning-password">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Advertencia</h4>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-editar-body">
                <p style="margin-left: 10px">Contraseña incorrecta. Intenta de nuevo.</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Navegacion a Almacen
        $(".almacen").click(function () {
            $("#modal-success").modal("hide");
            $.ajax({
                type: "GET",
                url: '@Url.Action("Index", "Almacen")',
                contentType: "application/json; charset=utf-8",
                data: {},
                success: function (data) { $("#HtmlBody").html(data); }
            });
        });

        // Generar Salida de Almacen
        function salidaAlmacen() {
            var dataform = $("#dataform").serialize() + '&' + $("#lista").serialize();
            //alert(dataform);
            $.ajax({
                type: "POST",
                url: '@Url.Action("BajaAlmacen", "Almacen")',
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                contentType: "application/x-www-form-urlencoded; charset=UTF-8",
                data: dataform,
                success: function (data) {
                    $("#modal-reauth").modal("hide");
                    $("#modal-success").modal("show");
                },
                error: function (xhr, status, error) { $("#modal-warning").modal("show"); },
            });
        }

        // Evitar que el Enter envie el formulario de manera accidental
        $('#passform, #dataform').on('keydown', function (e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                return false;
            }
        });
        
        // Validar campos antes de generar Salida
        $(".fieldValidation").click(function () {
            if (Validation()){
                $("#modal-reauth").modal("show");
            }
        });

        function Validation() {
            let validation = true;

            // Validar campos generales
            $('.validar:not(:disabled)').each(function() {
                const $field = $(this);
                $field.css("border-color", "");
                // limpiar siempre antes
                const value = $field.val()?.trim();
                if (!value || value === "0") {
                    $field.css("border-color", "red");
                    validation = false;
                }
            });

            // Validar que haya al menos un producto en la lista
            const productos = $('#ListaDeProductos input[type="hidden"][name*="almacenLista"][name*="IdProducto"]').length;
            const $scanInput = $('#ListaDeProductos .escanear'); $scanInput.css("border-color", "");
            //limpiar siempre antes
            if (productos === 0) {
                $scanInput.css("border-color", "red");
                validation = false;
            } return validation;
        }

        // Reautenticar usuario antes de generar Salida
        $(".reauth-user").click(function () {
            var form = $("#passform").serialize();
            //alert(form);
            $.ajax({
                type: "POST",
                url: '@Url.Action("ReAuthenticate", "Almacen")',
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                contentType: "application/x-www-form-urlencoded; charset=UTF-8",
                data: form,
                success: function(data, textStatus, xhr) {
                    $("#modal-reauth").modal("hide");
                    salidaAlmacen();
                },
                error: function(xhr, status, error) {
                    $("#modal-warning-password").modal("show");
                }
            });
        });
    });
</script>
