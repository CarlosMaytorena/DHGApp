@model AgricolaDH_GApp.ViewModels.AlmacenVM

@functions {
    string ScrambleSerial(string? s)
    {
        s = (s ?? "").Trim().ToUpper();
        if (s.Length < 2) return s;

        int mid = s.Length / 2;
        return s.Substring(mid) + s.Substring(0, mid);
    }
}

<form id="lista">
    @Html.Hidden("SourceView", ViewData["SourceView"])
    <div class="card card-margin">
        <div class="row card-row-spacer">
            <div class="col-md-12">
                <label style="font-weight: normal; text-align: left; float: left">ID Producto</label>
                @Html.EditorFor(m => m.almacen.SerialNumber, new { htmlAttributes = new { @class = "form-control input-focus escanear", @placeholder = "Escanea el producto aqui"} })
            </div>
        </div>
        <div class="row card-row-spacer">
        </div>
    </div>
    @{
        if(Model.almacenLista.Count > 0)
        {
            <div class="card card-margin">
                <div class="card-header">
                    <h3 class="card-title">Lista de Productos</h3>
                    &nbsp;
                    &nbsp;
                    &nbsp;
                    &nbsp;
                    <button type="button" class="btn-sm secondary-background-color eliminarAlmacenLista" style="color: white; border: 0px">
                        <i class="nav-icon fas fa-minus"></i>
                    </button>
                </div>
                <div class="row card-row-spacer">
                    <div class="col-md-4">
                        <label style="font-weight: normal; text-align: left; float: left">Producto ID</label>
                    </div>
                    <div class="col-md-4">
                        <label style="font-weight: normal; text-align: left; float: left">Producto</label>
                    </div>
                    <div class="col-md-4">
                        <label style="font-weight: normal; text-align: left; float: left">Descripcion</label>
                    </div>
                </div>

                @for (int i = 0; i < Model.almacenLista.Count; i++)
                {
                    <div class="row card-row-spacer">
                        @Html.HiddenFor(m => m.almacenLista[i].IdAlmacen)
                        @Html.HiddenFor(m => m.almacenLista[i].IdProducto)
                        @Html.HiddenFor(m => m.almacenLista[i].IdEstatus)
                        @Html.HiddenFor(m => m.almacenLista[i].Estatus)
                        <div class="col-md-4">
                            @* el real se manda al server *@
                            @Html.HiddenFor(m => m.almacenLista[i].SerialNumber)

                            @* el usuario ve el scrambled *@
                            <input class="form-control input-focus" readonly
                                   value="@ScrambleSerial(Model.almacenLista[i].SerialNumber)" />
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(m => m.almacenLista[i].NombreProducto, new { htmlAttributes = new { @class = "form-control input-focus", @readonly = "readonly" } })
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(m => m.almacenLista[i].Descripcion, new { htmlAttributes = new { @class = "form-control input-focus", @readonly = "readonly" } })
                        </div>
                    </div>
                }
                <div class="row card-row-spacer">
                </div>
            </div>
        }
    }
    <div class="card card-margin">
    </div>

</form>

<script>
    $(document).ready(function () {
        // --- Configuración global ---
        let inputBuffer = '';
        let lastInputTime = Date.now();
        const scanThreshold = 50; // ms entre caracteres
        const minScanLength = 5;  // longitud mínima para considerar escaneo

        // Razor inyecta el valor y lo convertimos a boolean
        const isAdmin = "@Model.almacen.esAutorizado".toLowerCase() === "true";

        // --- Funciones auxiliares ---
        function resetBufferIfTimeout() {
            const now = Date.now();
            if (now - lastInputTime > scanThreshold) {
                inputBuffer = '';
            }
            lastInputTime = now;
        }

        function appendToBuffer(char) {
            inputBuffer += char;
        }

        function enviarProducto() {
            var dataform = $("#lista");
            alert(dataform.serialize())
            $.ajax({
                type: "POST",
                url: '@Url.Action("AgregarProductoLista", "Almacen")',
                data: dataform.serialize(),
                success: function (data) {
                    $("#ListaDeProductos").html(data.html);
                    $("input[name='almacen.SerialNumber']").val("").focus();
                },
                error: function (xhr, status, error) { alert("Error: " + xhr.responseText); }
            });
        }

        // --- Handlers ---
        function handlePasteDrop(e) {
            if (isAdmin) return true; // admin puede pegar/escribir
            e.preventDefault();
            return false;
        }

        function handleKeyPress(event) {
            resetBufferIfTimeout();

            if (isAdmin) {
                // Admin puede escribir libremente, pero Enter dispara el envío
                if (event.which === 13) {
                    event.preventDefault();
                    enviarProducto();
                }
                return;
            }

            // Usuarios normales: solo escaneo
            if (
                (event.which >= 48 && event.which <= 57) ||   // 0-9
                (event.which >= 65 && event.which <= 90) ||   // A-Z
                (event.which >= 97 && event.which <= 122) ||  // a-z
                event.which === 13                            // Enter
            ) {
                if (event.which === 13) {
                    event.preventDefault();
                    if (inputBuffer.length >= minScanLength) {
                        enviarProducto();
                    }
                    inputBuffer = '';
                } else {
                    appendToBuffer(String.fromCharCode(event.which));
                }
            } else {
                event.preventDefault();
            }
        }

        // --- Binding ---
        $('.escanear').on('paste drop', handlePasteDrop);
        $('.escanear').on('keypress', handleKeyPress);


        $('.eliminarAlmacenLista').click(function () {
            var dataform = $("#lista");
            //alert(dataform.serialize());
            $.ajax({
                type: "POST",
                url: '@Url.Action("EliminarProductoLista", "Almacen")',
                data: dataform.serialize(),
                success: function (data) { $("#ListaDeProductos").html(data.html); },
                error: function (xhr, status, error) { alert("Error: " + xhr.responseText); }
            });
        });

    });
</script>
