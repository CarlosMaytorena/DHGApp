@model AgricolaDH_GApp.Models.Login
@{
    Layout = "";
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgricolaDH_GApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgricolaDH_GApp.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <div class="login-container-square">
            <div class="login-image-container">
                <img src="~/images/DHG.jpeg" alt="Company Logo"/>
            </div>

            <div class="login-fields-container">
                <div class="login-page-title">DH&G Agriculture</div>

                <form asp-controller="Login" asp-action="Authenticate" method="post">
                    @* Display validation summary *@
                    <div class="text-danger">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    @if (TempData["LoginError"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["LoginError"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }


                    <div class="login-page-inputs">
                        <span>
                            <input asp-for="Username" type="text" maxlength="100" class="text-input" placeholder="User" />
                            <span class="text-danger">@Html.ValidationMessageFor(m => m.Username)</span>
                        </span>
                        <span>
                            <input asp-for="Password" type="password" maxlength="100" class="text-input" placeholder="Password" />
                            <span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
                        </span>
                    </div>

                    <div class="login-page-rememberme">
                        <!--<span class="login-page-rememberme-text">
                            <input type="checkbox" />
                            <span>Remember Me</span>
                        </span>
                        -->
                        <button type="button" class="btn btn-link login-page-forgotpassword" style="padding: 0; font-size: 0.9rem;" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal">
                            Forgot password?
                        </button>

                    </div>

                    <div style="width: 100%; display: flex; justify-content: center; align-items: center; margin-top: 2vh; padding: 0px 40px;">
                        <button type="submit" class="login-page-button">Login</button>
                    </div>
                </form>
                <div class="login-fields-footer">
                    Developed by PolarTech ©
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Modal para forgot password -->
    <div class="modal fade" id="forgotPasswordModal" tabindex="-1" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="forgotPasswordModalLabel">Recuperar contraseña</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>

                <div class="modal-body">
                    <!-- Paso 1: ingresar correo -->
                    <div id="stepCorreo">
                        <p>Ingresa tu correo y te enviaremos un código para restablecer tu contraseña.</p>
                        <div class="mb-3">
                            <label for="correoRecuperacion" class="form-label">Correo electrónico</label>
                            <input type="email" class="form-control" id="correoRecuperacion" required />
                        </div>
                        <div class="modal-footer">
                            <button id="btnEnviarCorreo" class="btn btn-primary">Enviar</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        </div>
                    </div>

                    <!-- Paso 2: ingresar código -->
                    <div id="stepCodigo" style="display: none;">
                        <p>Por favor ingresa el número de 4 dígitos que se te envió al correo proporcionado.</p>
                        <div class="mb-3">
                            <label for="codigo4" class="form-label">Código</label>
                            <input type="text" maxlength="4" class="form-control" id="codigo4" pattern="\d{4}" required />
                        </div>
                        <div class="modal-footer">
                            <button id="btnValidarCodigo" class="btn btn-success">Validar código</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                    <!-- Paso 3: ingresar nueva contraseña -->
                    <div id="stepNuevaPassword" style="display: none;">
                        <p>Ingresa tu nueva contraseña.</p>
                        <div class="mb-3">
                            <label for="nuevaPassword1" class="form-label">Nueva contraseña</label>
                            <input type="password" class="form-control" id="nuevaPassword1" required />
                        </div>
                        <div class="mb-3">
                            <label for="nuevaPassword2" class="form-label">Confirmar nueva contraseña</label>
                            <input type="password" class="form-control" id="nuevaPassword2" required />
                        </div>
                        <div class="modal-footer">
                            <button id="btnGuardarNuevaPassword" class="btn btn-primary">Guardar contraseña</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById("btnEnviarCorreo").addEventListener("click", function () {
            const correo = document.getElementById("correoRecuperacion").value;

            if (!correo) {
                alert("Por favor ingresa un correo.");
                return;
            }

            // Llamada al backend para verificar si el correo existe
            fetch('/Login/VerificarCorreo', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: JSON.stringify({ correo: correo })
            })
            .then(response => response.json())
            .then(data => {
                if (data.existe) {
                    // Mostrar la parte del código
                    document.getElementById("stepCorreo").style.display = "none";
                    document.getElementById("stepCodigo").style.display = "block";
                } else {
                    alert("Este correo no está registrado.");
                }
            })
            .catch(error => {
                console.error("Error verificando el correo:", error);
                alert("Ocurrió un error al verificar el correo.");
            });
        });
    </script>
    <script>
        let codigoGenerado = ""; // se llenará al verificar el correo
        let correoActual = "";

        document.getElementById("btnEnviarCorreo").addEventListener("click", function () {
            const correo = document.getElementById("correoRecuperacion").value;
            correoActual = correo;

            if (!correo) {
                alert("Por favor ingresa un correo.");
                return;
            }

            fetch('/Login/VerificarCorreo', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: JSON.stringify({ correo: correo })
            })
            .then(response => response.json())
            .then(data => {
                if (data.existe) {
                    codigoGenerado = data.codigo; // guardar el código generado

                    document.getElementById("stepCorreo").style.display = "none";
                    document.getElementById("stepCodigo").style.display = "block";
                } else {
                    alert("Este correo no está registrado.");
                }
            })
            .catch(error => {
                console.error("Error verificando el correo:", error);
                alert("Ocurrió un error al verificar el correo.");
            });
        });

        document.getElementById("btnValidarCodigo").addEventListener("click", function () {
            const codigoIngresado = document.getElementById("codigo4").value;

            if (codigoIngresado === codigoGenerado) {
                document.getElementById("stepCodigo").style.display = "none";
                document.getElementById("stepNuevaPassword").style.display = "block";
            } else {
                alert("El código ingresado no es correcto.");
            }
        });

        document.getElementById("btnGuardarNuevaPassword").addEventListener("click", function () {
            const nueva1 = document.getElementById("nuevaPassword1").value;
            const nueva2 = document.getElementById("nuevaPassword2").value;

            if (!nueva1 || !nueva2) {
                alert("Por favor llena ambos campos.");
                return;
            }

            if (nueva1 !== nueva2) {
                alert("Las contraseñas no coinciden.");
                return;
            }

            fetch('/Login/CambiarPassword', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: JSON.stringify({ correo: correoActual, nuevaPassword: nueva1 })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert("Contraseña actualizada exitosamente.");
                    location.reload(); // o cerrar modal
                } else {
                    alert("Ocurrió un error al actualizar la contraseña.");
                }
            })
            .catch(error => {
                console.error("Error actualizando contraseña:", error);
                alert("Error inesperado.");
            });
        });

    </script>




</body>
</html>
