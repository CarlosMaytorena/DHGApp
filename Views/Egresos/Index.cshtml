@model AgricolaDH_GApp.ViewModels.EgresosVM

<div class="text-center">

    <div class="row top-row-spacer">
        <div class="col-md-5">
            <h4 class="page-title">Egresos</h4>
        </div>
        <div class="col-md-5">
        </div>
        <div class="col-md-2">
            <button id="crear-egreso" class="btn btn-block secondary-background-color" style="color: white">
                Crear Egreso
            </button>
        </div>
    </div>

    <!-- Movements Table Section -->
    <div class="row">
        <div class="col-12">
            <div class="card card-margin">
                <div class="card-header">
                    <h3 class="card-title"></h3>
                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0" style="height: 300px;">
                    <table class="table table-head-fixed text-nowrap">
                        <thead>
                            <tr>    
                                <th></th>
                                <th># Egreso</th>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Solicitante</th>
                                <th>Aprobado Por</th>
                                <th>Comentarios</th>
                                <th>Fecha</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var egreso in Model.egresosList)
                            {
                                <tr>
                                    <td>
                                        <button class="btn btn-default button-plus realizarIngreso"><i class="nav-icon fas fa-eye"></i></button>
                                    </td>
                                    <td>@egreso.IdEgreso</td>
                                    <td>@egreso.Producto</td>
                                    <td>@egreso.Cantidad</td>
                                    <td>@egreso.Solicitante</td>
                                    <td>@egreso.AprobadoPor</td>
                                    <td>@egreso.Comentarios</td>
                                    <td>@egreso.Fecha</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card card-margin">
                <div class="card-header">
                    <h3 class="card-title">Detalles del Movimiento</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0" style="height: 300px;">
                    <table class="table table-head-fixed text-nowrap">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Comentarios</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>123</td>
                                <td>Quimico 1</td>
                                <td>5</td>
                                <td>Limpieza de equipo</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>


<script>
    $(document).ready(function () {
        $("#crear-egreso").click(function () {
            $.ajax({
                type: "GET",
                url: '@Url.Action("EgresoForm", "Egresos")',
                contentType: "application/json; charset=utf-8",
                data: {},
                success: function (data) {
                    $("#HtmlBody").html(data);
                }
            });
        });

    });
</script>

