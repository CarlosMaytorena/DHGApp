@model AgricolaDH_GApp.Models.Usuario


@using System.Web.Optimization
<aside class="main-sidebar sidebar-dark-primary elevation-4" style="background-color: #AAD9BB; height:100vh;">
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="info">
                <a href="#" class="d-block" style="color: #2E2E2E">DH&G Agrícola</a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->
                @if (Model.IdRol == RolEnumerators.Administrador)
                {
                    <li class="nav-item">
                        <a href="#" id="dashboard" class="nav-link" style="color: #2E2E2E">
                            <i class="nav-icon fas fa-th"></i>
                            <p>
                                Dashboard
                            </p>
                        </a>
                    </li>                    
                }                

                @if (Model.IdRol == RolEnumerators.Administrador || Model.IdRol == RolEnumerators.Ingeniero || Model.IdRol == RolEnumerators.Contabilidad)
                {
                    <li class="nav-item">
                        <a href="#" id="requisicion" class="nav-link" style="color: #2E2E2E">
                            <i class="nav-icon fas fa-pen"></i>
                            <p>
                                Requisición
                            </p>
                        </a>
                    </li>
                }

                @if (Model.IdRol == RolEnumerators.Administrador || Model.IdRol == RolEnumerators.Contabilidad || Model.IdRol == RolEnumerators.Ingreso)
                {
                    <li class="nav-item">
                        <a href="#" id="subirFactura" class="nav-link" style="color: #2E2E2E">
                            <i class="nav-icon fas fa-upload"></i>
                            <p>
                                Subir Factura
                            </p>
                        </a>
                    </li>                    
                }               

                @if (Model.IdRol == RolEnumerators.Administrador || Model.IdRol == RolEnumerators.Ingreso)
                {
                    <li class="nav-item">
                        <a href="#" id="ingresos" class="nav-link" style="color: #2E2E2E">
                            <i class="nav-icon fas fa-list"></i>
                            <p>
                                Ingresos
                            </p>
                        </a>
                    </li>
                    
                }

                @if (Model.IdRol == RolEnumerators.Administrador || Model.IdRol == RolEnumerators.Almacen || Model.IdRol==RolEnumerators.Egreso)
                {
                    <li class="nav-item">
                        <a href="#" id="almacen" class="nav-link" style="color: #2E2E2E">
                            <i class="nav-icon fas fa-industry"></i>
                            <p>
                                Almacen
                            </p>
                        </a>
                    </li>
                    
                }

                @if (Model.IdRol == RolEnumerators.Administrador || Model.IdRol == RolEnumerators.Egreso)
                {
                    <li class="nav-item">
                        <a href="#" id="egresos" class="nav-link" style="color: #2E2E2E">
                            <i class="nav-icon fas fa-arrow-down"></i>
                            <p>
                                Egresos
                            </p>
                        </a>
                    </li>
                    
                }

                @if (Model.IdRol == RolEnumerators.Administrador)
                {
                    <li class="nav-item">
                        <a href="#" id="reimpresion" class="nav-link" style="color: #2E2E2E">
                            <i class="nav-icon fas fa-print"></i>
                            <p>
                                Reimpresión
                            </p>
                        </a>
                    </li>
                }

                @if (Model.IdRol == RolEnumerators.Administrador)
                {
                    <li class="nav-item menu-closed">
                        <a href="#" class="nav-link" style="color: #2E2E2E">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>
                                Admin
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="#" id="usuarios" class="nav-link" style="color: #2E2E2E">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Usuarios</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" id="areas" class="nav-link" style="color: #2E2E2E">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Áreas</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" id="cultivos" class="nav-link" style="color: #2E2E2E">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Cultivos</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" id="etapas" class="nav-link" style="color: #2E2E2E">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Etapas</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" id="proveedores" class="nav-link" style="color: #2E2E2E">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Proveedores</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" id="productos" class="nav-link" style="color: #2E2E2E">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Productos</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" id="ranchos" class="nav-link" style="color: #2E2E2E">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Ranchos</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" id="temporadas" class="nav-link" style="color: #2E2E2E">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Temporadas</p>
                                </a>
                            </li>
                        </ul>
                    </li>                    
                }   
                <li class="nav-item" style="margin-top:100%;">
                    <form method="post" asp-controller="Login" asp-action="Logout" id="logoutForm" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn nav-link" style="background:none; border:none; padding:0; color:#2E2E2E; cursor:pointer; width:100%;">
                            <i class="nav-icon fas fa-sign-out-alt"></i>
                        </button>
                    </form>
                </li>

            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>


